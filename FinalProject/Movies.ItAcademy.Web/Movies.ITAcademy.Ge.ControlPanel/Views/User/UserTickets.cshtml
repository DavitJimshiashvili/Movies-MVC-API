@using Movies.ITAcademy.Ge.ControlPanel.Models.ViewModels
@model List<TicketViewModel>


@{
    ViewData["Title"] = "UserTickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            @foreach(var item in typeof(TicketViewModel).GetProperties().Skip(1))
            {
                <th>
                    @item.Name
                </th>
            }
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovieId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
            <form asp-controller="User" asp-action="CancelTicket">
                <input type="hidden" name="id" value="@item.MovieId" />
                <input type="hidden" name="userId" value="@item.UserId" />
                <input type="submit" value="Cancel" class="btn btn-danger" />
            </form>
            </td>
        </tr>
}
    </tbody>
</table>