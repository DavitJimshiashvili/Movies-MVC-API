@using Movies.ITAcademy.Ge.ControlPanel.Models.ViewModels
@model List<UserViewModel>
@{
    ViewData["Title"] = "AuthenticatedUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AuthenticatedUsers</h1>

<table class="table">
    <thead>
        <tr>
            @foreach(var item in typeof(UserViewModel).GetProperties().Skip(1))
            {
                <th>
                    @item.Name
                </th>
            }
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-controller="User" asp-action="UserTickets" asp-route-id="@item.Id" class="btn btn-primary">Tickets</a> 
            </td>
        </tr>
}
    </tbody>
</table>